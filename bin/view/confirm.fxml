<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ConfirmController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Thank you for volunteering!">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <Separator prefWidth="200.0" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Participation summary:">
         <font>
            <Font size="16.0" />
         </font></Text>
      <Label fx:id="contributionValue">
         <font>
            <Font size="16.0" />
         </font></Label>
      <Separator prefWidth="200.0" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Please input the 6-digit code we've sent to your inbox" />
      <TextField fx:id="codeInput" alignment="CENTER" promptText="e.g. 123456" />
      <Label fx:id="resultLabel" />
      <Button mnemonicParsing="false" onAction="#handleConfirmClick" text="Confirm" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
