<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProjectAddController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add a project">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Title">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <TextField fx:id="projectTitle" promptText="Enter project title" style="-fx-min-height: 30; -fx-font-size: 16;" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Location">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <TextField fx:id="projectLocation" promptText="Enter project location" style="-fx-min-height: 30; -fx-font-size: 16;" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Day">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <ComboBox fx:id="projectDay" prefHeight="30.0" prefWidth="280.0" promptText="Select day" style="-fx-min-height: 30; -fx-font-size: 16;" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hourly value">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <TextField fx:id="hourlyRate" promptText="Enter project rate" style="-fx-min-height: 30; -fx-font-size: 16;" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Total slots">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <TextField fx:id="totalSlots" promptText="Enter total slots for project" style="-fx-min-height: 30; -fx-font-size: 16;" />
         </children>
      </VBox>
      <Label fx:id="resultLabel" wrapText="true" />
      <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateClick" text="Add" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
